<small class="pull-right">[<%= link_to 'Edit this post', edit_post_path(@post) %>]</small>

<p>
  <%= render @post.categories %>
</p>

<%= render "shared/content_title", title: @post.title %>

<div>
  <%= @post.description %>
</div>

<hr/>

<div>
  <%= form_for [@post, @comment] do |f| %>
    <%= render 'shared/error', item: @comment %>
    <div class='control-group'>
      <%= f.label :body, "Leave a comment:" %>
      <%= f.text_area :body, rows: 3, class: "span4" %>
    <br/>
    <%= f.submit "Create comment", class: "btn btn-primary"%>
  <% end %>
</div>

<h5>Comments:</h5>
<% @post.comments.each do |comment| %>
  <div class="row">
    <div class="span8 well">
      <p><%= comment.body %></p>
      <p>
        <span class="quiet">by </span><%= comment.creator.user_name %> <small> at <%= display_datetime(comment.created_at) %></small>
      </p>
    </div>
  </div>
<% end %>